{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/static/:path*",
      "destination": "/build/static/:path*"
    },
    {
      "source": "/:file",
      "destination": "/build/:file"
    },
    {
      "source": "/:path*",
      "destination": "/build/index.html"
    }
  ]
}